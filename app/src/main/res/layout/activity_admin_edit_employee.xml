        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/admin_empedit_txt2"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_empedit_txt1" />

    <EditText
        android:id="@+id/admin_empedit_txt7"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"

        android:hint="@string/admin_empedit_txt7"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/admin_empedit_txt2"
        app:layout_constraintTop_toBottomOf="@+id/admin_empedit_txt1" />

    <TextView
        android:id="@+id/admin_empedit_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="8dp"

        android:text="@string/admin_empedit_txt1"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_employeeedit_img2" />

    <ImageView
        android:id="@+id/admin_employeeedit_img2"
        android:layout_width="120dp"
        android:layout_height="111dp"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
