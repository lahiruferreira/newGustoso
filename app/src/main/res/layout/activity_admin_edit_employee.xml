        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/admin_empedit_txt9" />

    <TextView
        android:id="@+id/admin_empedit_txt6"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"

        android:text="@string/admin_empedit_txt6"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_empedit_txt5" />

    <EditText
        android:id="@+id/admin_empedit_txt11"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
